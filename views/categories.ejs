<% include partials/manage/header.ejs %>

<h4 class="mt-4"><a href="/categories/add">Add Category</a></h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Category Name</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <% categories.forEach(function(category){%>
        <tr>
            <td><%= category._id %></td>
            <td><%= category.name %></td>
            <td><a class="btn btn-primary" href="/categories/edit/<%= category._id %>">Edit</a></td>
            <td>
                <form method="post" action="/categories/delete/<%= category._id %>">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <input type="hidden" name="_csrf" value="{_csrf}" />
                    <input type="hidden" name="_method" value="DELETE" />
                </form>
            </td>
        </tr>
        <%}) %>
    </tbody>
</table>


<% include partials/manage/footer.ejs %>